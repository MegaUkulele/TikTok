<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <solid
        android:color="@color/watch_background" />
    <gradient
        android:type="radial"
        android:gradientRadius="130"
        android:centerX=".5"
        android:centerY=".5"
        android:startColor="#ff3300"
        android:endColor="@color/watch_background" />

    <!-- Specify the margins that all content inside the drawable must adhere to -->
    <padding
        android:left="30dp"
        android:right="30dp"
        android:top="30dp"
        android:bottom="30dp" />
</shape>